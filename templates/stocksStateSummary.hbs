<div class="row">
    <div class="small-12 small-centered columns">
        <nav class="top-bar" data-topbar role="navigation">
            <section class ="top-bar-section">
                <ul class="left">
                    <li class="name">
                        <h1><a href="#" {{action 'sortBy' 'shareVolume:desc'}}>Most Active By Volume</a></h1>
                    </li>
                    <li class="name">
                        <h1><a href="#" {{action 'displayGainers'}}>Gainers</a></h1>
                    </li>
                    <li class="name">
                        <h1><a href="#" {{action 'displayLosers'}}>Losers</a></h1>
                    </li>
                </ul>
            </section>
        </nav>
    </div>
</div>
<div class="row">
    <div class="small-12 small-centered columns">
        <table height="200" overflow="scroll">
            <col width="200">
            <col width="100">
            <col width="100">
            <col width="200">
            <col width="100">
            <col width="300">
            <thead>
                <tr>
                    <th style="text-align: center" align="center">Company</th>
                    <th style="text-align: center" align="center">Open Price</th>
                    <th style="text-align: center" align="center">Current Price</th>
                    <th style="text-align: center" align="center">Change <br>Value&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;%</th>
                    <th style="text-align: center" align="center">Share Volume</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each item in sortedCompanies}}
                    <tr>
                        <td style="text-align: center" >{{#link-to 'companyInfo' item.id}}{{item.name}}{{/link-to}}</td>
                        <td style="text-align: center" >{{item.openPrice}}</td>
                        <td style="text-align: center" >{{item.currentPrice}}</td>
                        <td style="text-align: center" >{{item.changeValue}} <img {{bind-attr src=item.changeSymbol}}> {{item.changePercent}}</td>
                        <td style="text-align: center" >{{item.shareVolume}}</td>
                        <td style="text-align: center" >{{#link-to 'placeBidOrder' item.id}}<button>Buy</button>{{/link-to}}{{#link-to 'placeSellOrder' item.id}}<button>Sell</button>{{/link-to}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div>
        <ul class = "small-block-grid-3">
            <li>
                {{outlet "marketByOrder"}}
            </li>
            <li>
                {{outlet "marketByPrice"}}
            </li>
            <li>
                {{outlet "symbol"}}
            </li>
        </ul>
    </div>
</div>